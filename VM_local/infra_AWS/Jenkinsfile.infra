pipeline {
    agent any

    environment {
        TF_VAR_FILE = "terraform.tfvars"
        INFRA_DIR = "infrastructure" // "." si tes .tf sont √† la racine
    }

    stages {
        stage('üì• Cloner le d√©p√¥t') {
            steps {
                git url: 'https://github.com/Jocerak/projet.git'
            }
        }

        stage('üîß Init Terraform') {
            steps {
                dir("${INFRA_DIR}") {
                    sh 'terraform init'
                }
            }
        }

        stage('üß™ Terraform Plan') {
            steps {
                dir("${INFRA_DIR}") {
                    sh 'terraform plan -var-file="${TF_VAR_FILE}"'
                }
            }
        }

        stage('üíæ Sauvegarde du tfstate') {
            steps {
                dir("${INFRA_DIR}") {
                    script {
                        def timestamp = new Date().format("yyyyMMdd-HHmmss")
                        sh "cp terraform.tfstate terraform.tfstate.backup-${timestamp} || true"
                    }
                }
            }
        }

        stage('üöÄ Terraform Apply') {
            steps {
                input message: "Souhaitez-vous appliquer les modifications Terraform ?"
                dir("${INFRA_DIR}") {
                    sh 'terraform apply -auto-approve -var-file="${TF_VAR_FILE}"'
                }
            }
        }
    }

    post {
        success {
            echo '‚úÖ Infra d√©ploy√©e avec succ√®s'
            slackSend(
                channel: '#devops',
                color: 'good',
                message: "‚úÖ Jenkins - Terraform apply r√©ussi pour *${env.JOB_NAME}* (<${env.BUILD_URL}|Build #${env.BUILD_NUMBER}>)"
            )
            mail to: 'jocerak@yahoo.com',
                 subject: "‚úÖ SUCCESS - ${env.JOB_NAME} #${env.BUILD_NUMBER}",
                 body: "L'infrastructure a √©t√© d√©ploy√©e avec succ√®s.\nVoir le d√©tail : ${env.BUILD_URL}"
        }
        failure {
            echo '‚ùå √âchec du pipeline'
            slackSend(
                channel: '#devops',
                color: 'danger',
                message: "‚ùå Jenkins - √âchec du d√©ploiement Terraform pour *${env.JOB_NAME}* (<${env.BUILD_URL}|Build #${env.BUILD_NUMBER}>)"
            )
            mail to: 'tonmail@example.com',
                 subject: "‚ùå FAILURE - ${env.JOB_NAME} #${env.BUILD_NUMBER}",
                 body: "Le pipeline a √©chou√©.\nVoir les logs ici : ${env.BUILD_URL}"
        }
    }
}
